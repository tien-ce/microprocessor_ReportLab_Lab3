#include "automatic.h"
void automatic_init(){
	if(status == INIT){
		setTimer1(1, 5000);
	}
}
void automatic_run(){
 	switch(status)
	{
	case (INIT):
			if(timer1_flag[1] == 0){
				status = GREEN_RED;
				setTimer1(0, 3000);
				timer1_flag[1] = 1;
			}
			break;
	case (GREEN_RED):
			// TODO
				traffic_green_red();
			break;
	case (YELLOW_RED):
				traffic_yellow_red();
			break;
	case (RED_GREEN):
				traffic_red_green();
			break;
	case (RED_YELLOW):
				traffic_red_yellow();
			break;
	default:
		break;
	}

}

void traffic_mannual_green_red(){
	if(timer1_flag[1]  == 1){
		status = GREEN_RED;
	}
	if(button1_flag == 1){
		status = MAN_YELLOW_RED;
		setTimer1(1, 10000);
		button1_flag = 0;
	}
}
void traffic_mannual_yellow_red(){
	if(timer1_flag[1]  == 1){
		status = YELLOW_RED;
	}
	if(button1_flag == 1){
		status = MAN_RED_GREEN;
		setTimer1(1, 10000);
		button1_flag = 0;
	}
}
void traffic_mannual_red_green(){
	if(timer1_flag[1]  == 1){
		status = RED_GREEN;
	}
	if(button1_flag == 1){
		status = MAN_RED_YELLOW;
		setTimer1(1, 10000);
		button1_flag = 0;
	}
}
void traffic_mannual_red_yellow(){
	if(timer1_flag[1]  == 1){
		status = RED_YELLOW;
	}
	if(button1_flag == 1){
		status = MAN_GREEN_RED;
		setTimer1(1, 10000);
		button1_flag = 0;
	}
}
